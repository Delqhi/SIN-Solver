# 2Captcha Worker Environment Variables
# Copy this file to .env and fill in with actual credentials

# 2Captcha.com Login Credentials
TWOCAPTCHA_EMAIL=your-email@example.com
TWOCAPTCHA_PASSWORD=your-password

# Browser Configuration
HEADLESS=false
STEALTH_MODE=true

# Screenshot Settings
SCREENSHOT_DIR=./screenshots
SAVE_SCREENSHOTS=true

# Timeout Settings (milliseconds)
NAVIGATION_TIMEOUT=30000
CAPTCHA_WAIT_TIMEOUT=60000

# Proxy Settings (optional)
# PROXY_URL=http://proxy.example.com:8080
# PROXY_USERNAME=username
# PROXY_PASSWORD=password

# Logging
LOG_LEVEL=info

# ============================================
# Anti-Ban Protection Settings
# ============================================

# Enable/disable anti-ban protection system
# Options: true (enabled), false (disabled)
# Default: true
ANTI_BAN_ENABLED=true

# Behavior pattern for anti-ban simulation
# Options: normal, aggressive, cautious, night-owl
# - normal: Balanced approach (5-30s delays, 7% skip rate)
# - aggressive: Push maximum volume (3-15s delays, 3% skip rate)
# - cautious: Conservative approach (10-60s delays, 15% skip rate)
# - night-owl: Work during night hours only (10 PM - 8 AM)
# Default: normal
ANTI_BAN_PATTERN=normal

# Enable verbose logging for anti-ban events
# Options: true, false
# Default: false
VERBOSE_ANTI_BAN=false

# Work hours enforcement (24-hour format, 0-23)
# Set when the worker should be allowed to work
# Default start: 8 (8 AM), Default end: 22 (10 PM)
WORK_HOURS_START=8
WORK_HOURS_END=22

# Slack webhook URL for anti-ban alerts (optional)
# Send notifications when breaks are required, work hours exceeded, etc.
# Example: https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX
# Leave empty to disable Slack alerts
# SLACK_WEBHOOK_URL=

# ============================================
# Worker Service Configuration
# ============================================

# Maximum concurrent workers (default: 5)
MAX_WORKERS=5

# Maximum job queue size (default: 1000)
MAX_QUEUE_SIZE=1000

# Default job timeout (milliseconds, default: 60000)
DEFAULT_TIMEOUT_MS=60000

# Maximum retry attempts (default: 3)
MAX_RETRIES=3

# Retry backoff (milliseconds, default: 1000)
RETRY_BACKOFF_MS=1000
