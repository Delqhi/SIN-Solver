# 2Captcha Worker Environment Variables
# Copy this file to .env and fill in with actual credentials

# 2Captcha.com Login Credentials
TWOCAPTCHA_EMAIL=your-email@example.com
TWOCAPTCHA_PASSWORD=your-password

# Browser Configuration
HEADLESS=false
STEALTH_MODE=true

# Screenshot Settings
SCREENSHOT_DIR=./screenshots
SAVE_SCREENSHOTS=true

# Timeout Settings (milliseconds)
NAVIGATION_TIMEOUT=30000
CAPTCHA_WAIT_TIMEOUT=60000

# Proxy Settings (optional)
# PROXY_URL=http://proxy.example.com:8080
# PROXY_USERNAME=username
# PROXY_PASSWORD=password

# Logging
LOG_LEVEL=info
