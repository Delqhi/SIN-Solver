# ==========================================
# ðŸš€ SIN-SOLVER ENVIRONMENT CONFIGURATION
# Version: 2.0.0
# ==========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ==========================================

# ==========================================
# CORE INFRASTRUCTURE
# ==========================================

# Application secret key (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# Database URL (PostgreSQL with asyncpg driver)
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/sin_solver

# Orchestrator URL (internal)
ORCHESTRATOR_URL=http://localhost:8080

# Steel Browser CDP endpoint
STEEL_CDP_URL=ws://127.0.0.1:3000/

# Plugin Hub URL
PLUGIN_HUB_URL=http://room-17-sin-plugins:8000

# ==========================================
# DATABASE (PostgreSQL)
# ==========================================

POSTGRES_DB=sin_solver
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_HOST=room-03-postgres-master
POSTGRES_PORT=5432

# Knowledge Base (optional)
KNOWLEDGE_DB=knowledge_base
KNOWLEDGE_USER=librarian
KNOWLEDGE_PASSWORD=your_knowledge_password

# ==========================================
# CACHE (Redis)
# ==========================================

REDIS_URL=redis://room-04-redis-cache:6379

# ==========================================
# AI PROVIDER API KEYS
# ==========================================
# SIN-Solver prioritizes FREE AI providers.
# Get your free API keys from the links below.

# Mistral AI (FREE - 1M tokens/month)
# Get key: https://console.mistral.ai/api-keys
MISTRAL_API_KEY=

# Google Gemini (FREE - 60 req/min, 1500/day)
# Get key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GOOGLE_API_KEY=

# Groq (FREE - 14,400 req/day, ULTRA FAST!)
# Get key: https://console.groq.com/keys
GROQ_API_KEY=

# HuggingFace (FREE - unlimited for inference)
# Get key: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=

# Together AI (FREE tier available)
# Get key: https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=

# ==========================================
# OPTIONAL: PAID PROVIDERS (if free limits exceeded)
# ==========================================

# OpenAI (PAID - use only if necessary)
# OPENAI_API_KEY=

# Anthropic Claude (PAID - use only if necessary)
# ANTHROPIC_API_KEY=

# ==========================================
# BROWSER AUTOMATION
# ==========================================

# Steel Browser (self-hosted stealth browser)
STEEL_BROWSER_URL=http://agent-05-steel-browser:3005
STEEL_API_KEY=

# Skyvern (visual AI automation)
SKYVERN_URL=http://agent-06-skyvern-solver:8030
SKYVERN_API_KEY=

# ==========================================
# DASHBOARD & UI
# ==========================================

# Dashboard port (default: 3011)
DASHBOARD_PORT=3011

# Next.js environment
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ==========================================
# N8N ORCHESTRATOR
# ==========================================

N8N_PORT=5678
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password

# ==========================================
# LOGGING & MONITORING
# ==========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable metrics collection
ENABLE_METRICS=true

# Sentry DSN (optional - error tracking)
# SENTRY_DSN=

# ==========================================
# SECURITY
# ==========================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3011,http://localhost:3000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==========================================
# WORKER CREDENTIALS (for Survey/Captcha Workers)
# ==========================================

WORKER_EMAIL=worker@example.com
WORKER_PASSWORD=your_worker_password

# ==========================================
# DOCKER NETWORK
# ==========================================

# Docker network name
DOCKER_NETWORK=sin-solver-network

# Subnet for internal communication
DOCKER_SUBNET=172.20.0.0/16
