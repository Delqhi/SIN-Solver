# Captcha Worker Environment Configuration
# Copy to .env and fill in your API keys

# ===== SECURITY (REQUIRED FOR PRODUCTION) =====
# API Key for Bearer token authentication
CAPTCHA_API_KEY=sk-captcha-worker-production-2026

# CORS Configuration - comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3011,http://room-13-api-brain:8000

# ===== AI SERVICE API KEYS =====
MISTRAL_API_KEY=your_mistral_api_key_here
KIMI_API_KEY=your_kimi_api_key_here

# ===== STEEL BROWSER CONFIGURATION =====
STEEL_API_URL=http://agent-05-steel-browser:3000
STEEL_API_KEY=

# ===== LOCAL LLM (OPTIONAL) =====
OLLAMA_HOST=http://host.docker.internal:11434

# ===== REDIS CONFIGURATION =====
REDIS_HOST=room-04-redis-cache
REDIS_PORT=6379
REDIS_DB=0

# ===== API CONFIGURATION =====
API_PORT=8019
API_HOST=0.0.0.0
DEBUG=false

# ===== RATE LIMITING =====
RATE_LIMIT_MAX=20
RATE_LIMIT_WINDOW=60

# ===== INTEGRATION =====
API_BRAIN_URL=http://room-13-api-brain:8000
