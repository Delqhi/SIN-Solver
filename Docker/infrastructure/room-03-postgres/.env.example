# Database Configuration Template
# Copy to .env and fill in your values

# PostgreSQL Master Database (room-03-postgres-master)
DB_USER=postgres
DB_PASSWORD=sinsolveradmin
DB_NAME=sin_solver_prod
DB_PORT=5432
DB_HOST=room-03-postgres-master

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2am UTC
BACKUP_RETENTION_DAYS=30

# Performance Tuning
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB

# Logging
POSTGRES_LOG_STATEMENT=all
POSTGRES_LOG_MIN_DURATION_STATEMENT=100
