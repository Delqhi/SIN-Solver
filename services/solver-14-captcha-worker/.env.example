# üåê BROWSER CAPTCHA WORKER CONFIGURATION
# Copy this file to .env and fill in your actual values

# ===========================================
# WORKER CREDENTIALS
# ===========================================

# Which captcha provider to work on
# Options: 2captcha | kolotibablo | captcha-guru | anti-captcha
PROVIDER=2captcha

# Your worker account username/email
# Get this from the provider website (2captcha.com, etc.)
USERNAME=your_worker_username

# Your worker account password
PASSWORD=your_worker_password

# ===========================================
# BROWSER SETTINGS
# ===========================================

# Show the browser window while working (false = headless)
# Set to 'false' for production, 'true' for debugging
HEADLESS=false

# Steel Browser CDP endpoint (if using external Steel Browser)
# Default: http://localhost:3000 (local Playwright)
# For Steel Browser: http://steel-browser:3005
STEEL_BROWSER_URL=http://localhost:3000

# ===========================================
# SOLVER CONFIGURATION
# ===========================================

# FastAPI CAPTCHA solver endpoint
# This service has YOLO + OCR for solving CAPTCHAs
CAPTCHA_SOLVER_URL=http://captcha-solver:8019

# Confidence threshold for automatic solving (0-1)
# If confidence < this, fails and waits for manual input
SOLVER_CONFIDENCE_THRESHOLD=0.60

# ===========================================
# LOGGING
# ===========================================

# Log level: fatal, error, warn, info, debug, trace
LOG_LEVEL=info

# ===========================================
# NODE ENVIRONMENT
# ===========================================

NODE_ENV=production
PORT=8080

# ===========================================
# ADVANCED OPTIONS (OPTIONAL)
# ===========================================

# Timeout for each CAPTCHA solving attempt (milliseconds)
SOLVE_TIMEOUT=30000

# Wait time between checking for new CAPTCHAs (milliseconds)
CHECK_INTERVAL=2000

# Maximum retry attempts for failed CAPTCHAs
MAX_RETRIES=3

# Enable debug mode (verbose logging)
DEBUG=false
